pages = {52--70},
title = {{Collaborative Exploration of Unknown Environments with Teams of Mobile Robots}},
url = {http://www.springerlink.com/index/10.1007/3-540-37724-7{\%}5Cnhttp://link.springer.com/chapter/10.1007/3-540-37724-7{\_}4},
