@article{Furgale2010,
abstract = {This paper describes a system built to enable long-range rover autonomy$\backslash$nusing a stereo camera as the only sensor. During a learning phase,$\backslash$nthe system builds a manifold map of overlapping submaps as it is$\backslash$npiloted along a route. The map is then used for localization as the$\backslash$nrover repeats the route autonomously. The use of local submaps allows$\backslash$nthe rover to faithfully repeat long routes without the need for an$\backslash$naccurate global reconstruction. Path following over nonplanar terrain$\backslash$nis handled by performing localization in three dimensions and then$\backslash$nprojecting this down to a local ground plane associated with the$\backslash$ncurrent submap to perform path tracking. We have tested this system$\backslash$nin an urban area and in a planetary analog setting in the Canadian$\backslash$nHigh Arctic. More than 32 km was covered---99.6{\%} autonomously---with$\backslash$nautonomous runs ranging from 45 m to 3.2 km, all without the use$\backslash$nof the global positioning system (GPS). Because it enables long-range$\backslash$nautonomous behavior in a single command cycle, visual teach and repeat$\backslash$nis well suited to planetary applications, such as Mars sample return,$\backslash$nin which no GPS is available.},
annote = {The paper presents a complete algorithm for performin long-range rover navigation using a stereo camera as the only sensor. The system produces a combined topological/metric map consisting of a sequence of small overlapping submaps. As the rover progresses along a path, the nearest submap is swapped into memory. The rover interleaves VO and localization, using VO to carry the algorithm through areas with moderate appearance changes and using localization to ensure that the rover ends up in the same physical place at the end of a long path. With this approach, a global consitent map is not required and therefore the computational effort for a global map optimisation is saved.},
archivePrefix = {arXiv},
arxivId = {10.1.1.91.5767},
author = {Furgale, Paul and Barfoot, Timothy D.},
doi = {10.1002/rob.20342},
eprint = {10.1.1.91.5767},
file = {:home/andreasziegler/Downloads/Visual Teach and Repeat for Long-Range Rover Autonomy.pdf:pdf},
isbn = {1556-4967},
issn = {15564959},
journal = {Journal of Field Robotics},
number = {5},
pages = {534--560},
pmid = {22164016},
title = {{Visual teach and repeat for long-range rover autonomy}},
volume = {27},
year = {2010}
}
@inproceedings{Akdeniz2015,
abstract = {This paper is on simultaneous exploration and topological map building in completely unknown environments. We propose an approach that consists of a continuous loop of local decision-making (where potential search directions are added to the current node) and global decision-making (where the robot moves along one of these directions and adds possibly a new node to the map ) using the previously proposed bubble space representation. As the robot switches between the two in a continual manner, it creates a coarse graph representation of the environment. There is a node for every explored location with a set of associated edges that either indicate potential search directions or connect to the other explored locations. The so-far constructed topological map contains all the required information in regards to deciding where to move with compar- atively low memory requirements. Experimental results with an extensive real data set demonstrate that large terrains can be explored and mapped efficiently using this approach.},
annote = {This paper presents a novel approach to the simultaneous exploration and topological mapping of unknown environments by a robot. Assuming the robot to be capable of recognizing previously visited places, the proposed approach consists of a continuous loop of local and global decision-making. The goal of local decision-making is to find potential search directions and associate them with the current node in the topological map. IN the global decision-making, the robot moves in one particular search direction which results in a new node being added (if the place has not been visited previously). The global decision-making chooses the direction having maximal utility amon the unexplored search directions and moves for a fixed distance.},
author = {Akdeniz, Bayram C. and Bozma, H. Isil},
booktitle = {Proceedings - IEEE International Conference on Robotics and Automation},
doi = {10.1109/ICRA.2015.7139310},
file = {:home/andreasziegler/Downloads/Exploration and Topological Map Building in Unknown Environments.pdf:pdf},
isbn = {9781479969234},
